<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="CalemPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <non-jta-data-source>java:comp/env/jdbc/calem</non-jta-data-source>
    <class>calem.persistence.entity.ConfirmacaoMatriculaCalem</class>
    <class>calem.persistence.entity.Curso</class>
    <class>calem.persistence.entity.Disciplina</class>
    <class>calem.persistence.entity.FotosCracha</class>
    <class>calem.persistence.entity.MatriculaCalem</class>
    <class>calem.persistence.entity.Pessoa</class>
    <class>calem.persistence.entity.ServidorAtual</class>
    <class>calem.persistence.entity.ServidorPessoa</class>
    <class>calem.persistence.entity.Setor</class>
    <class>calem.persistence.entity.Turma</class>
    <class>calem.persistence.entity.UOrg</class>
    <class>calem.persistence.entity.Unidade</class>
    <class>calem.persistence.entity.Usuario</class>
    <class>calem.persistence.entity.Aluno</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
    <properties>
      <property name="hibernate.cache.use_second_level_cache" value="true"/>
      <property name="hibernate.cache.use_query_cache" value="true"/>
      <property name="hibernate.cache.provider_class" value="net.sf.ehcache.hibernate.EhCacheProvider"/>
      <property name="hibernate.cache.region.factory_class" value="org.hibernate.cache.ehcache.EhCacheRegionFactory"/>
      <!--
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
      -->
    </properties>
  </persistence-unit>
  <persistence-unit name="PgsqlDalemPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <non-jta-data-source>java:/comp/env/jdbc/pgsql/dalem</non-jta-data-source>
    <class>calem.persistence.entity.Candidato</class>
    <class>calem.persistence.entity.Idioma</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <shared-cache-mode>ALL</shared-cache-mode>
    <properties>
      <property name="hibernate.cache.use_second_level_cache" value="true"/>
      <property name="hibernate.cache.use_query_cache" value="true"/>
      <property name="hibernate.cache.provider_class" value="net.sf.ehcache.hibernate.EhCacheProvider"/>
      <property name="hibernate.cache.region.factory_class" value="org.hibernate.cache.ehcache.EhCacheRegionFactory"/>
      <!--
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
      -->
    </properties>
  </persistence-unit>
</persistence>
